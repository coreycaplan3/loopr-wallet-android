<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caplaninnovations.looprwallet">

    <application
        android:name=".application.LooprWalletApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <activity
            android:name="com.caplaninnovations.looprwallet.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.caplaninnovations.looprwallet.activities.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity
            android:name="com.caplaninnovations.looprwallet.activities.IntroActivity"
            android:label="@string/title_activity_intro" />

        <activity
            android:name="com.caplaninnovations.looprwallet.activities.SignInActivity"
            android:label="@string/title_activity_sign_in" />

        <activity
            android:name="com.caplaninnovations.looprwallet.activities.TransfersActivity"
            android:label="@string/transfer" />

        <activity
            android:name="com.caplaninnovations.looprwallet.activities.SearchActivity"
            android:label="@string/search" />

    </application>

</manifest>