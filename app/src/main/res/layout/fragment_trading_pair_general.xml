<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/standard_padding">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/card_padding_bottom"
                android:paddingLeft="@dimen/card_padding_horizontal"
                android:paddingRight="@dimen/card_padding_horizontal"
                android:paddingTop="@dimen/card_padding_top">

                <TextView
                    android:id="@+id/tradingPairGeneralStatsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <LinearLayout
                    android:id="@+id/tradingPairGeneralPrimaryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tradingPairGeneralStatsText"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:layout_toLeftOf="@id/tradingPairGeneralSecondaryContainer"
                    android:layout_toStartOf="@id/tradingPairGeneralSecondaryContainer"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tradingPairGeneralCurrentPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin_extra_small"
                        android:text="@string/current" />

                    <TextView
                        android:id="@+id/tradingPairGeneralVolumeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:text="@string/default_trade_volume"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin_extra_small"
                        android:text="@string/volume" />

                    <TextView
                        android:id="@+id/tradingPairMarketCapText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:text="@string/default_market_cap"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin_extra_small"
                        android:text="@string/market_cap" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tradingPairGeneralSecondaryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tradingPairGeneralStatsText"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tradingPairGeneralOpenPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin_extra_small"
                        android:text="@string/today_open" />

                    <TextView
                        android:id="@+id/tradingPairGeneralHighText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:text="@string/default_price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin_extra_small"
                        android:text="@string/today_high" />

                    <TextView
                        android:id="@+id/tradingPairGeneralLowPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:text="@string/default_price"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin_extra_small"
                        android:text="@string/today_low" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>