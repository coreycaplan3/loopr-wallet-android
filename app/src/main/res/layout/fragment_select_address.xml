<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/createTransferRecipientInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_padding">

            <LinearLayout
                android:id="@+id/recipientNameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/standard_padding_small">

                <TextView
                    android:id="@+id/recipientNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="3"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    tools:text="@string/default_contact_name_with_label" />

                <ImageButton
                    android:id="@+id/addContactButton"
                    style="@style/App.Button.Borderless"
                    android:layout_width="@dimen/card_action_icon_size"
                    android:layout_height="@dimen/card_action_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/horizontal_margin_small"
                    android:layout_marginStart="@dimen/horizontal_margin_small"
                    android:contentDescription="@string/content_description_add_contact"
                    android:src="@drawable/ic_person_add_white_24dp"
                    android:tint="?android:attr/textColorPrimary"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/recipientAddressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipientNameContainer">

                <include
                    layout="@layout/barcode_button"
                    android:layout_width="@dimen/card_action_icon_size"
                    android:layout_height="@dimen/card_action_icon_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/vertical_margin" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/recipientAddressInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/barcodeScannerButton"
                    android:layout_toStartOf="@id/barcodeScannerButton"
                    app:counterEnabled="true"
                    app:counterMaxLength="@integer/public_key_length"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/recipientAddressEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/recipient_address"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.25"
                        tools:text="@string/default_address" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <include
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_below="@id/recipientAddressContainer"
                android:layout_marginTop="@dimen/vertical_margin_small" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/viewContactsFragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/createTransferContinueButton"
            android:layout_below="@id/createTransferRecipientInputContainer"
            android:layout_marginTop="@dimen/vertical_margin_small" />

        <Button
            android:id="@+id/createTransferContinueButton"
            style="@style/App.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/_continue" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>