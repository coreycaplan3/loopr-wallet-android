<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/appbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/standard_vertical_padding"
            android:paddingTop="@dimen/standard_vertical_padding">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/large_horizontal_padding"
                    android:paddingRight="@dimen/large_horizontal_padding"
                    android:paddingTop="@dimen/standard_vertical_padding">

                    <LinearLayout
                        android:id="@+id/quantityContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/quantityLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/create_order_default_quantity_label" />

                        <EditText
                            android:id="@+id/quantityEditText"
                            style="@style/orderEditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="end"
                            android:inputType="numberDecimal"
                            android:scrollHorizontally="true"
                            android:text="@string/default_order_quantity" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/priceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_vertical_padding">

                        <TextView
                            android:id="@+id/priceLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/market_price" />

                        <TextView
                            android:id="@+id/priceEditText"
                            style="@style/orderLabelStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/default_price_in_eth" />

                    </LinearLayout>

                    <View
                        android:id="@+id/createOrderDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/standard_vertical_padding"
                        android:layout_marginTop="@dimen/standard_vertical_padding"
                        android:alpha="0.12"
                        android:background="?attr/dividerColor" />

                    <LinearLayout
                        android:id="@+id/totalContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/standard_vertical_padding">

                        <TextView
                            android:id="@+id/createOrderTotalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="@string/estimated_cost" />

                        <TextView
                            android:id="@+id/createOrderTotalInput"
                            style="@style/orderLabelStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/default_order_total_in_eth" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_padding"
                app:contentPadding="@dimen/standard_horizontal_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_summary"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_vertical_padding"
                        android:lineSpacingMultiplier="1.1"
                        android:text="@string/default_order_summary" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/standard_horizontal_padding"
                android:layout_marginRight="@dimen/standard_horizontal_padding"
                android:layout_marginTop="@dimen/standard_vertical_padding"
                android:text="@string/buy" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>