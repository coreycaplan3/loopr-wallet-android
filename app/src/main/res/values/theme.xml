<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Main Colors -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>
        <item name="colorAccent">@color/lightAccent</item>

        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="colorBackground">@color/lightBackground</item>
        <item name="android:colorBackground">@color/lightBackground</item>

        <item name="colorControlActivated">@color/lightAccent</item>

        <item name="circleBackgroundColor">@color/lightShadowColor</item>

        <!-- Actionbar -->
        <item name="titleTextColor">@color/darkPrimaryText</item>
        <item name="actionOverflowButtonStyle">@style/App.LightCustomOverflow</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationTextColor">@color/darkPrimaryText</item>

        <!-- Button Style -->
        <item name="colorButtonNormal">@color/lightButtonDisabled</item>
        <item name="buttonStyle">@style/App.Button</item>
        <item name="borderlessButtonColor">@color/lightPrimaryDark</item>
        <item name="borderlessButtonStyle">@style/App.Button.Borderless</item>

        <!-- Cards -->
        <item name="cardBackgroundColor">@color/cardview_light_background</item>

        <!-- Divider -->
        <item name="dividerColor">@android:color/black</item>

        <!-- Tabs -->
        <item name="bottomNavigationTabTextColor">@color/light_tabs_text</item>
        <item name="tabIndicatorColor">@android:color/white</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/lightPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/darkSecondaryText</item>
        <item name="android:textColorPrimaryInverseDisableOnly">
            @color/text_color_light_primary_inverse
        </item>
        <item name="android:textColorSecondary">@color/lightSecondaryText</item>
        <item name="android:textColorSecondaryInverse">@color/darkSecondaryText</item>
        <item name="textColorError">@color/textColorError</item>

    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">

        <!-- Main Colors -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>

        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="colorBackground">@color/darkBackground</item>
        <item name="android:colorBackground">@color/darkBackground</item>

        <item name="colorControlActivated">@color/darkAccent</item>

        <item name="circleBackgroundColor">@color/darkShadowColor</item>

        <!-- Actionbar -->
        <item name="titleTextColor">@color/darkPrimaryText</item>
        <item name="actionOverflowButtonStyle">@style/App.DarkCustomOverflow</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationTextColor">@color/darkPrimaryText</item>

        <!-- Button Style -->
        <item name="colorButtonNormal">@color/darkButtonDisabled</item>
        <item name="buttonStyle">@style/App.Button</item>
        <item name="borderlessButtonColor">@color/darkPrimary</item>
        <item name="borderlessButtonStyle">@style/App.Button.Borderless</item>

        <!-- Cards -->
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>

        <!-- Divider -->
        <item name="dividerColor">@android:color/white</item>

        <!-- Tabs -->
        <item name="bottomNavigationTabTextColor">@color/dark_tabs_text</item>
        <item name="tabIndicatorColor">@android:color/white</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/darkPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/darkPrimaryText</item>
        <item name="android:textColorPrimaryInverseDisableOnly">
            @color/text_color_dark_primary_inverse
        </item>
        <item name="android:textColorSecondary">@color/darkSecondaryText</item>
        <item name="android:textColorSecondaryInverse">@color/darkSecondaryText</item>
        <item name="textColorDisabled">@color/textColorError</item>
        <item name="textColorError">@color/textColorError</item>

    </style>

</resources>