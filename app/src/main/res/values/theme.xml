<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Main Colors -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightPrimaryDark</item>
        <item name="colorAccent">@color/lightAccent</item>

        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>

        <!-- Text -->
        <item name="textColorPrimary">@color/lightPrimaryText</item>
        <item name="textColorSecondary">@color/lightSecondaryText</item>

        <!-- Overflow Menu -->
        <item name="actionOverflowButtonStyle">@style/lightCustomOverflow</item>

        <!-- Button Style -->
        <item name="colorButtonNormal">@color/lightPrimary</item>
        <item name="buttonStyle">@style/buttonStyle</item>

        <!-- Tabs -->
        <item name="tabWidgetTextColor">@color/light_tabs_text</item>
        <item name="tabIndicatorColor">@android:color/white</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationBackground">@color/lightBottomNavigationBackground</item>
        <item name="bottomNavigationTextColor">@color/lightPrimaryText</item>
        <item name="bottomNavigationTextColorSelected">@color/lightPrimaryTextDisabled</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">

        <!-- Main Colors -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="colorAccent">@color/darkAccent</item>

        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>

        <!-- Text -->
        <item name="textColorPrimary">@color/darkPrimaryText</item>
        <item name="textColorSecondary">@color/darkSecondaryText</item>

        <!-- Overflow Menu -->
        <item name="actionOverflowButtonStyle">@style/darkCustomOverflow</item>

        <!-- Button Style -->
        <item name="colorButtonNormal">@color/darkPrimary</item>
        <item name="buttonStyle">@style/buttonStyle</item>

        <!-- Tabs -->
        <item name="tabWidgetTextColor">@color/dark_tabs_text</item>
        <item name="tabIndicatorColor">@android:color/white</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationBackground">@color/darkBottomNavigationBackground</item>
        <item name="bottomNavigationTextColor">@color/darkPrimaryText</item>
        <item name="bottomNavigationTextColorSelected">@color/darkPrimaryTextDisabled</item>
    </style>

</resources>