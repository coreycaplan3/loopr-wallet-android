<resources>

    <style name="App" />

    <!-- Order Screen -->
    <style name="App.Order" />

    <style name="App.Order.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="App.Order.Label">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Buttons -->

    <style name="App.Button.CardAction" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/card_action_icon_size</item>
        <item name="android:layout_height">@dimen/card_action_icon_size</item>
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin_small</item>
    </style>

    <style name="App.Button.CardFlat" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/card_action_icon_size</item>
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

    <style name="App.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">?android:attr/textColorPrimaryInverseDisableOnly</item>
        <item name="android:background">@drawable/button_background_material</item>
    </style>

    <style name="App.Button.NumberPad" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="App.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/borderlessButtonColor</item>
    </style>

    <!-- Card -->

    <style name="App.Card">
        <item name="contentPadding">@dimen/standard_padding</item>
    </style>

    <style name="App.Card.Title">
        <item name="contentPaddingLeft">@dimen/card_padding_horizontal</item>
        <item name="contentPaddingRight">@dimen/card_padding_horizontal</item>
        <item name="contentPaddingTop">@dimen/card_padding_top</item>
        <item name="contentPaddingBottom">@dimen/card_padding_bottom</item>
    </style>

    <style name="App.Card.PrimaryContainer">
        <item name="android:paddingTop">@dimen/card_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

    <style name="App.Card.ActionContainer">
        <item name="android:padding">@dimen/standard_padding_small</item>
    </style>

    <!-- Overflow Menu -->

    <style name="App.LightCustomOverflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="App.DarkCustomOverflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <!-- Text -->

    <style name="TextAppearance.AppCompat.Subtitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
