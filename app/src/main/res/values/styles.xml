<resources>

    <!-- Order Screen -->

    <style name="orderEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="orderLabelStyle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Buttons -->

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonNumberPad" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/accent_ripple_effect</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="lightButtonStyleBorderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/lightPrimaryDark</item>
    </style>

    <style name="darkButtonStyleBorderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/darkPrimary</item>
    </style>

    <!-- Card -->

    <style name="cardStyle">
        <item name="contentPaddingLeft">@dimen/card_padding_horizontal</item>
        <item name="contentPaddingRight">@dimen/card_padding_horizontal</item>
        <item name="contentPaddingTop">@dimen/card_padding_top</item>
        <item name="contentPaddingBottom">@dimen/card_padding_bottom</item>
    </style>

    <style name="cardStylePrimaryContainer">
        <item name="android:paddingTop">@dimen/card_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

    <style name="cardStyleActionContainer">
        <item name="android:padding">@dimen/standard_padding_small</item>
    </style>

    <!-- Overflow Menu -->

    <style name="lightCustomOverflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="darkCustomOverflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

</resources>
