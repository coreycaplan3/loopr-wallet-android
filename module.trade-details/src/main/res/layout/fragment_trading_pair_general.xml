<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/standard_padding">

        <android.support.v7.widget.CardView
            style="@style/App.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tradingPairGeneralStatsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                <LinearLayout
                    android:id="@+id/tradingPairGeneralPrimaryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/tradingPairGeneralStatsText"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:layout_toLeftOf="@id/tradingPairGeneralSecondaryContainer"
                    android:layout_toStartOf="@id/tradingPairGeneralSecondaryContainer"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tradingPairGeneralCurrentPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="@string/default_price" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/statistics_pair_margin_top"
                        android:text="@string/current" />

                    <TextView
                        android:id="@+id/tradingPairGeneralVolumeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="@string/default_trade_volume" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/statistics_pair_margin_top"
                        android:text="@string/volume" />

                    <TextView
                        android:id="@+id/tradingPairMarketCapText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="@string/default_market_cap" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/statistics_pair_margin_top"
                        android:text="@string/market_cap" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tradingPairGeneralSecondaryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tradingPairGeneralStatsText"
                    android:layout_marginTop="@dimen/vertical_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tradingPairGeneralOpenPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="@string/default_price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/statistics_pair_margin_top"
                        android:text="@string/today_open" />

                    <TextView
                        android:id="@+id/tradingPairGeneralHighText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="@string/default_price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/statistics_pair_margin_top"
                        android:text="@string/today_high" />

                    <TextView
                        android:id="@+id/tradingPairGeneralLowPriceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/vertical_margin"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        tools:text="@string/default_price" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/statistics_pair_margin_top"
                        android:text="@string/today_low" />
                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>