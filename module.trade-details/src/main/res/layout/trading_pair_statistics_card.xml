<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/App.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tradingPairStatsTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <LinearLayout
            android:id="@+id/tradingGeneralCurrentPriceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tradingPairStatsTitleLabel"
            android:layout_marginTop="@dimen/vertical_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="$0.63" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/statistics_pair_margin_top"
                android:text="@string/current" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tradingPairStatsPrimaryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tradingGeneralCurrentPriceContainer"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_toLeftOf="@id/tradingPairStatsSecondaryContainer"
            android:layout_toStartOf="@id/tradingPairStatsSecondaryContainer"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:id="@+id/tradingPairStatsCurrentPriceText"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Body1"-->
            <!--tools:text="@string/default_price" />-->

            <!--<TextView-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Caption"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/statistics_pair_margin_top"-->
            <!--android:text="@string/current" />-->

            <TextView
                android:id="@+id/tradingPairStatsVolumeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="@string/default_trade_volume" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/statistics_pair_margin_top"
                android:text="@string/volume" />

            <TextView
                android:id="@+id/tradingPairStatsHighLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="@string/default_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/statistics_pair_margin_top"
                android:text="@string/today_high" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tradingPairStatsSecondaryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tradingGeneralCurrentPriceContainer"
            android:layout_marginTop="@dimen/vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tradingPairStats24hChangeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                tools:text="@string/default_trading_pair_percentage_change"
                tools:textColor="@color/green_400" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/statistics_pair_margin_top"
                android:text="@string/_24h_change" />

            <TextView
                android:id="@+id/tradingPairStatsLowPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:text="@string/default_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/statistics_pair_margin_top"
                android:text="@string/today_low" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>