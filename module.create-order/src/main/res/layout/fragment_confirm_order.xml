<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/confirmOrderYouSendContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/createOrderOriginLabel"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/you_send" />

            <ImageView
                android:id="@+id/createOrderOriginImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin_small"
                tools:ignore="ContentDescription"
                tools:src="@drawable/token_weth" />

            <TextView
                android:id="@+id/confirmOrderOriginTokenQuantityLabel"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_small"
                tools:text="12.42584 WETH" />

            <TextView
                android:id="@+id/confirmOrderOriginFiatLabel"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin_small"
                tools:text="~ $8,698.09" />

        </LinearLayout>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_arrow_forward_white_24dp"
            android:tint="?attr/textColorPrimaryOnly"
            app:layout_constraintBottom_toBottomOf="@id/confirmOrderYouSendContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/confirmOrderYouSendContainer"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/confirmOrderDestinationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/you_get" />

            <ImageView
                android:id="@+id/createOrderDestinationImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin_small"
                tools:ignore="ContentDescription"
                tools:src="@drawable/token_appc" />

            <TextView
                android:id="@+id/confirmOrderDestinationTokenLabel"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_small"
                tools:text="15,240.95 APPC" />

            <TextView
                android:id="@+id/confirmOrderDestinationFiatLabel"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin_small"
                tools:text="~ $8,698.09" />

        </LinearLayout>

        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/price"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderEstimatedPriceFiatLabel"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/confirmOrderPriceLabel"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderEstimatedPriceFiatLabel"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="0.00080994 APPC / WETH" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/estimated_price"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderPriceDivider"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/confirmOrderEstimatedPriceFiatLabel"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderPriceDivider"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="~ $0.52" />

        <include
            android:id="@+id/confirmOrderPriceDivider"
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderLrcFeeLabel" />

        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/lrc_fee"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderEstimatedLrcFeeFiatLabel"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/confirmOrderLrcFeeLabel"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderEstimatedLrcFeeFiatLabel"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="2.54354 LRC" />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/estimated_lrc_fee"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderLrcFeeDivider"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/confirmOrderEstimatedLrcFeeFiatLabel"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin_small"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderLrcFeeDivider"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="$1.82" />

        <include
            android:id="@+id/confirmOrderLrcFeeDivider"
            layout="@layout/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderMarginSplitLabel" />

        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:text="@string/margin_split"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderPlaceOrderButton"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/confirmOrderMarginSplitLabel"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:lines="1"
            app:layout_constraintBottom_toTopOf="@id/confirmOrderPlaceOrderButton"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="50%" />

        <Button
            android:id="@+id/confirmOrderPlaceOrderButton"
            style="@style/App.Button.ConstrainBottom"
            android:text="@string/place_order"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>