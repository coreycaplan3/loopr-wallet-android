<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/fragment_my_wallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/App.Card.PrimaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/balances" />

            <TextView
                android:id="@+id/ethereumBalanceLabel"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_subtitle_margin_top"
                tools:text="@string/default_eth_balance" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tokenBalanceLabel"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/default_lrc_quantity" />

            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/divider" />

        <LinearLayout
            style="@style/App.Card.ActionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/myWalletShowTokensButton"
                style="@style/App.Button.CardAction"
                android:contentDescription="@string/content_description_view_token_balances"
                android:src="@drawable/ic_details_white_24dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>