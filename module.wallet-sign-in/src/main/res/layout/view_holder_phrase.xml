<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <android.support.v7.widget.CardView
        android:id="@+id/phraseCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/vertical_margin_extra_small"
        android:layout_marginLeft="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:layout_marginTop="@dimen/vertical_margin_extra_small"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/vertical_padding_small"
            android:paddingLeft="@dimen/horizontal_padding"
            android:paddingRight="@dimen/horizontal_padding"
            android:paddingTop="@dimen/vertical_padding_small">

            <ImageButton
                android:id="@+id/phraseReorderButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_effect_accent"
                android:contentDescription="@string/content_description_reorder_mnemonic_phrase"
                android:src="@drawable/ic_reorder_white_24dp"
                android:tint="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/phraseWordLabel"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/phraseReorderButton"
                android:layout_toStartOf="@id/phraseReorderButton"
                tools:text="@string/default_mnemonic_apple" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>