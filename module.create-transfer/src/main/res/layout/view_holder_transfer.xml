<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect_accent"
    android:padding="@dimen/standard_padding">

    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/receiveImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:contentDescription="@string/content_description_receive"
            android:src="@drawable/transfer_receive"
            android:tint="@color/material_green" />

        <ImageView
            android:id="@+id/sendImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:contentDescription="@string/content_description_receive"
            android:src="@drawable/transfer_send"
            android:tint="@color/material_red"
            tools:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tokenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_toEndOf="@id/imageContainer"
        android:layout_toRightOf="@id/imageContainer"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="@string/default_received_token" />

    <TextView
        android:id="@+id/contactLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tokenLabel"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:layout_toEndOf="@id/imageContainer"
        android:layout_toRightOf="@id/imageContainer"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="@string/default_from_contact" />

    <TextView
        android:id="@+id/quantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_toEndOf="@id/tokenLabel"
        android:layout_toRightOf="@id/tokenLabel"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="@string/default_lrc_quantity" />

    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tokenLabel"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:layout_toEndOf="@id/contactLabel"
        android:layout_toRightOf="@id/contactLabel"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        tools:text="@string/default_total_price" />

</RelativeLayout>