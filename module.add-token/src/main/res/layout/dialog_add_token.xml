<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="?attr/cardBackgroundColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/standard_padding"
        android:paddingRight="@dimen/standard_padding"
        android:paddingTop="@dimen/standard_padding">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addTokenContractAddressInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/horizontal_margin_small"
            android:layout_marginRight="@dimen/horizontal_margin_small"
            android:layout_toLeftOf="@id/barcodeScannerButton"
            android:layout_toStartOf="@id/barcodeScannerButton"
            app:errorEnabled="true"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/addTokenContractAddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contract_address"
                android:inputType="textNoSuggestions" />

        </android.support.design.widget.TextInputLayout>

        <include
            layout="@layout/qr_code_button"
            android:layout_width="@dimen/card_action_icon_size"
            android:layout_height="@dimen/card_action_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/vertical_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addTokenNameInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTokenContractAddressInputLayout"
            android:layout_marginTop="@dimen/vertical_margin_small"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/addTokenNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addTokenTickerInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTokenNameInputLayout"
            android:layout_marginTop="@dimen/vertical_margin_small"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/addTokenTickerEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/symbol"
                android:inputType="textCapCharacters"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addTokenDecimalsInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addTokenTickerInputLayout"
            android:layout_marginTop="@dimen/vertical_margin_small"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/addTokenDecimalsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/decimals"
                android:inputType="number"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/addCustomTokenButton"
        style="@style/App.Button.NoClipping"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:enabled="false"
        android:text="@string/add_custom_token" />

</LinearLayout>