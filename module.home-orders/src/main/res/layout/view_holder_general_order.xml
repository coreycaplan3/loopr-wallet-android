<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/ripple_effect_accent"
    android:paddingLeft="@dimen/standard_padding_small"
    android:paddingRight="@dimen/standard_padding_small"
    android:paddingTop="@dimen/standard_padding_small">

    <org.loopring.looprwallet.core.views.OrderProgressView
        android:id="@+id/orderProgress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/horizontal_margin_small"
        android:layout_marginRight="@dimen/horizontal_margin_small"
        android:saveEnabled="true" />

    <RelativeLayout
        android:id="@+id/genericOrderPrimaryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/orderProgress"
        android:layout_toLeftOf="@id/genericOrderSecondaryContainer"
        android:layout_toRightOf="@id/orderProgress"
        android:layout_toStartOf="@id/genericOrderSecondaryContainer">

        <LinearLayout
            android:id="@+id/genericOrderTitleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/genericOrderTradePairText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                tools:text="@string/default_sell_order_pair" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/horizontal_margin_small"
                android:layout_marginStart="@dimen/horizontal_margin_small">

                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/sell_circle"
                    android:gravity="center"
                    android:text="@string/letter_s"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <include
                    android:id="@+id/genericOrderBuyCircle"
                    layout="@layout/buy_circle"
                    android:layout_width="@dimen/order_circle_size"
                    android:layout_height="@dimen/order_circle_size"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/genericOrderQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/genericOrderTitleContainer"
            android:layout_marginTop="@dimen/vertical_margin_extra_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="13sp"
            tools:text="@string/default_order_quantity_with_label" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/genericOrderSecondaryContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/standard_padding_small"
        android:layout_marginStart="@dimen/standard_padding_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/genericOrderPriceEthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_extra_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="13sp"
            tools:text="@string/default_price_in_eth" />

        <TextView
            android:id="@+id/genericOrderPriceFiatLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_extra_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="13sp"
            tools:text="@string/default_price" />

        <TextView
            android:id="@+id/genericOrderTotalPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_extra_small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textSize="13sp"
            tools:text="Tot $132,023.32" />

    </LinearLayout>

    <include
        layout="@layout/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/vertical_margin_small" />

</RelativeLayout>