<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/standard_padding_small"
    android:paddingRight="@dimen/standard_padding_small">

    <TextView
        android:id="@+id/generalOrderDateTitle"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/vertical_padding"
        android:paddingTop="@dimen/vertical_padding"
        tools:text="@string/default_date_short" />

    <android.support.v7.widget.CardView
        android:id="@+id/viewHolderHomeOrderContainer"
        style="@style/App.ViewGroup.Selectable"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/standard_padding_small">

            <FrameLayout
                android:id="@+id/viewHolderHomeOrderSymbolContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/horizontal_margin_small"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <org.loopring.looprwallet.orderdetails.views.OrderProgressView
                    android:id="@+id/viewHolderHomeOrderProgress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/viewHolderHomeOrderCompleteImage"
                    style="@style/App.Image.Bordered"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/content_description_completed_order"
                    android:padding="@dimen/standard_padding_small"
                    android:src="@drawable/ic_swap_horiz_white_24dp"
                    android:tint="?attr/textColorPrimaryOnly"
                    tools:visibility="gone" />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/viewHolderHomeOrderPrimaryContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/vertical_margin_small"
                android:layout_marginLeft="@dimen/horizontal_margin_small"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/viewHolderHomeOrderSymbolContainer"
                app:layout_constraintRight_toLeftOf="@id/viewHolderHomeOrderSecondaryContainer"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/horizontal_margin_small"
                    android:layout_marginRight="@dimen/horizontal_margin_small">

                    <TextView
                        android:id="@+id/viewHolderHomeOrderSellCircle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/sell_circle"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/letter_s"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/viewHolderHomeOrderBuyCircle"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/buy_circle"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/letter_b"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/viewHolderHomeOrderTradePairLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/list_primary_text_size"
                    tools:text="LRC-WETH" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewHolderHomeOrderSecondaryContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_margin_small"
                android:layout_marginLeft="@dimen/horizontal_margin_small"
                android:layout_marginStart="@dimen/horizontal_margin_small"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_default="spread"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="@id/viewHolderHomeOrderPrimaryContainer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintWidth_max="144dp">

                <TextView
                    android:id="@+id/viewHolderHomeOrderPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_margin_extra_small"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="@string/default_price_in_eth" />

                <TextView
                    android:id="@+id/viewHolderHomeOrderQuantityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_margin_extra_small"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="@string/default_order_quantity_with_label" />

                <TextView
                    android:id="@+id/viewHolderHomeOrderTotalPriceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_margin_extra_small"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="Tot 1.0439148 ETH" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>