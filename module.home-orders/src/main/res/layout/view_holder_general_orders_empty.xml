<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="@dimen/standard_padding"
    tools:ignore="UseCompoundDrawables">

    <android.support.v7.widget.CardView
        style="@style/App.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/empty_image_size"
                android:layout_height="@dimen/empty_image_size"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_assignment_white_48dp"
                android:tint="?attr/textColorDisabled"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/emptyOrdersLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="@string/empty_general_open_orders"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="@dimen/empty_title_text_size" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>