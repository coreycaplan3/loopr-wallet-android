<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetBottom="3dp"
    android:insetLeft="3dp"
    android:insetRight="3dp"
    android:insetTop="3dp">
    <ripple android:color="?android:attr/colorControlHighlight">
        <item>
            <!-- As we can't use themed ColorStateLists in L, we'll use a Drawable selector which
                 changes the shape's fill color. -->
            <selector>
                <item android:state_enabled="false">
                    <shape android:shape="rectangle">
                        <corners android:radius="@dimen/button_radius_material" />
                        <padding
                            android:bottom="@dimen/button_padding_material"
                            android:left="@dimen/button_padding_material"
                            android:right="@dimen/button_padding_material"
                            android:top="@dimen/button_padding_material" />
                    </shape>
                </item>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="?attr/colorAccent" />
                        <corners android:radius="@dimen/button_radius_material" />
                        <padding
                            android:bottom="@dimen/button_padding_material"
                            android:left="@dimen/button_padding_material"
                            android:right="@dimen/button_padding_material"
                            android:top="@dimen/button_padding_material" />
                    </shape>
                </item>
            </selector>
        </item>
    </ripple>
</inset>