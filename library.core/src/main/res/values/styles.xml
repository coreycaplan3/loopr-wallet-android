<resources>

    <style name="App" />

    <!-- Order Screen -->
    <style name="App.Order" />

    <style name="App.Order.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="App.Order.Label">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Auto Complete Text View -->

    <style name="App.AutoCompleteTextView.Search" parent="@style/Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:popupBackground">@color/cardview_light_background</item>
    </style>

    <!-- Buttons -->

    <style name="App.Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:textColor">?android:attr/textColorPrimaryInverseDisableOnly</item>
        <item name="android:background">@drawable/button_background_material</item>
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTintMode">add</item>
    </style>

    <style name="App.Button.Borderless" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/textColorPrimaryOnly</item>
        <item name="android:paddingLeft">@dimen/horizontal_padding_small</item>
        <item name="android:paddingRight">@dimen/horizontal_padding_small</item>
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTintMode">src_in</item>
    </style>

    <style name="App.Button.Borderless.White" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="backgroundTint">@color/button_background_tint_white</item>
        <item name="backgroundTintMode">src_in</item>
    </style>

    <style name="App.Button.CardAction" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/card_action_icon_size</item>
        <item name="android:layout_height">@dimen/card_action_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/horizontal_margin_small</item>
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTintMode">src_in</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="App.Button.CardFlat" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/card_action_icon_size</item>
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTintMode">src_in</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

    <!-- Used in bottom sheet dialogs. There's no shape with a radius that intrinsically limits the size -->
    <style name="App.Button.NoClipping" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_background_full_size</item>
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="backgroundTintMode">add</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverseDisableOnly</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Used when pinning the button to the bottom of the screen -->
    <style name="App.Button.ConstrainBottom" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_background_full_size</item>
        <item name="backgroundTint">@color/button_background_tint_white</item>
        <item name="backgroundTintMode">add</item>
    </style>

    <style name="App.Button.NumberPad" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ripple_effect_accent</item>
        <item name="backgroundTint">@color/button_background_tint</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <!-- Card -->

    <style name="App.Card" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="contentPadding">@dimen/standard_padding</item>
    </style>

    <style name="App.Card.Title">
        <item name="contentPaddingLeft">@dimen/card_padding_horizontal</item>
        <item name="contentPaddingRight">@dimen/card_padding_horizontal</item>
        <item name="contentPaddingTop">@dimen/card_padding_top</item>
        <item name="contentPaddingBottom">@dimen/card_padding_bottom</item>
    </style>

    <style name="App.Card.PrimaryContainer">
        <item name="android:paddingTop">@dimen/card_padding_top</item>
        <item name="android:paddingBottom">@dimen/card_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/card_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/card_padding_horizontal</item>
    </style>

    <style name="App.Card.ActionContainer">
        <item name="android:padding">@dimen/standard_padding_small</item>
    </style>

    <!-- Dialogs -->

    <style name="App.Dialog" parent="ThemeOverlay.AppCompat.Dialog" />

    <style name="App.Dialog.Alert" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/darkAccent</item>
    </style>

    <style name="App.Dialog.Alert.Light" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/lightAccent</item>
    </style>

    <style name="App.Dialog.BottomSheet" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>

        <!-- borderlessButtonStyle is what's used for styling the button internally -->
        <item name="android:borderlessButtonStyle">@style/App.Button.NoClipping</item>
    </style>

    <!-- ImageViews -->

    <style name="App.Image" />

    <style name="App.Image.Bordered">
        <item name="background">@drawable/border</item>
        <item name="backgroundTint">?attr/circleBackgroundColor</item>
        <item name="android:padding">@dimen/standard_margin_small</item>
    </style>

    <!-- Input -->

    <style name="App.WhiteInputLayout" parent="AppTheme.Dark">
        <item name="colorControlActivated">#FFF</item>
    </style>

    <!-- Overflow Menu -->

    <style name="App.LightCustomOverflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="App.DarkCustomOverflow">
        <item name="android:src">@drawable/ic_more_vert_white_24dp</item>
    </style>

    <style name="App.PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">?attr/cardBackgroundColor</item>
    </style>

    <!-- Search View -->

    <style name="App.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="autoCompleteTextViewStyle">@style/App.AutoCompleteTextView.Search</item>
    </style>

    <!-- Settings -->

    <style name="App.SettingsTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/App.FragmentSettingsStyle</item>
        <item name="preferenceFragmentStyle">@style/App.FragmentSettingsStyle</item>
    </style>

    <!-- Spinner -->

    <style name="App.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="App.Spinner.Light" parent="App.Spinner">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="App.FragmentSettingsStyle" parent="@style/PreferenceFragment.Material" />

    <!-- Text -->

    <style name="TextAppearance.AppCompat.Subtitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="App.ListSeparatorTextViewStyle">
        <item name="android:background">?attr/dividerColor</item>
    </style>

    <!-- View Groups -->

    <style name="App.ViewGroup" />

    <style name="App.ViewGroup.Selectable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">?attr/cardBackgroundColor</item>
        <item name="android:foreground">@drawable/view_group_ripple_background</item>
    </style>

</resources>
