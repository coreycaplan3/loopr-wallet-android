<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.Guideline
            android:id="@+id/verticalGuideline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/fragmentSecurityPinTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/security_unlock_with_pin"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintBottom_toTopOf="@id/verticalGuideline2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:padding="@dimen/standard_padding_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentSecurityPinTitleLabel">

            <ImageView
                android:id="@+id/fragmentSecurityPinCircle1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/horizontal_margin_small"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                android:contentDescription="@string/content_description_pin_circle"
                android:src="@drawable/primary_color_circle"
                android:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/fragmentSecurityPinCircle2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/horizontal_margin_small"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                android:contentDescription="@string/content_description_pin_circle"
                android:src="@drawable/primary_color_circle"
                android:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/fragmentSecurityPinCircle3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/horizontal_margin_small"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                android:contentDescription="@string/content_description_pin_circle"
                android:src="@drawable/primary_color_circle"
                android:tint="?attr/colorPrimary" />

            <ImageView
                android:id="@+id/fragmentSecurityPinCircle4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/content_description_pin_circle"
                android:src="@drawable/primary_color_circle"
                android:tint="?attr/colorPrimary" />

        </LinearLayout>

        <include
            layout="@layout/number_pad"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/verticalGuideline2" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>
